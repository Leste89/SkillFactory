from rectangle import Rectangle, Square, Circle
# создаем 2 прямоугольника
rect_1 = Rectangle(3,4)
rect_2 = Rectangle(12,5)
# выводим площадь прямоугольников

# print(rect_1.get_area(), rect_2.get_area())
# создаем 2 квадрата
square_1 = Square(5)
square_2 = Square(10)
# выводим площадь квадратов
# print(square_1.get_area_square(), square_2.get_area_square())
# создаем 2 круга
circle_1 = Square(8)
circle_2 = Square(12)
# находим площадь кругов
# print(circle_1.get_area_square(), square_2.get_area_square())
# теперь перебираем все объекты циклом и считаем площади


# Полиморфизм: использум один и тот же метод ( .get_area()), но получаем разное поведение программы
# которое будет зависеть от класса
figures = [rect_1, rect_2, square_1, square_2, circle_1, circle_2]
for figure in figures:
    print(figure.get_area())
